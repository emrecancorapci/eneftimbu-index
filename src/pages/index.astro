---

<Layout title="Welcome to Astro.">
  <main class="flex w-full justify-center">
    <div class="flex w-xl items-center justify-between">
      <div class="flex w-5/6 flex-col">
        <h2 class="font-display text-5xl font-medium text-white">
          {t('home.title')}
        </h2>
        <div class="flex flex-row gap-4 pt-6">
          <div class="w-1/4">
            <Button type="primary" onClick={primary} weight="normal">
              {t('home.create')}
            </Button>
          </div>
          <div class="w-1/4">
            <Button type="secondary" onClick={secondary} weight="normal">
              {t('home.discover')}
            </Button>
          </div>
          <a class="self-center px-4 text-white hover:text-primary-dark" href="/more">
            {t('home.more')}
          </a>
        </div>
      </div>
      <img src="/images/Frame1.png" alt="Astro" class="w-7/12 rounded-lg" />
    </div>
  </main>
</Layout>
