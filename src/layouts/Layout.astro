---
import { astroI18n } from 'astro-i18n';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
}
const { title } = Astro.props;

astroI18n.init(Astro);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col justify-between">
    <div class="root"></div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  @import 'https://fonts.googleapis.com/css?family=Space+Grotesk:thin,extrelight,light,regular,regularitalic,medium,mediumitalic,semibold,semibolditalic,bold,bolditalic)';
  @import 'https://fonts.googleapis.com/css?family=Chivo:thin,extrelight,light,regular,regularitalic,medium,mediumitalic,semibold,semibolditalic,bold,bolditalic)';

  body {
    overflow-x: hidden;
    min-height: 100vh;
    background: rgb(0 251 245);
    background: linear-gradient(
      90deg,
      rgb(0 251 245) 0%,
      rgb(0 61 218) 25%,
      rgb(0 116 182) 50%,
      rgb(0 144 118) 75%,
      rgb(61 139 0) 100%
    );
  }

  .root {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: -1;
    background: rgb(20 20 20);
    background: linear-gradient(180deg, #0f0f0f 0%, #141414f2 30%, #141414d9 75%, #141414b3 100%);
  }

  code {
    font-family: Menlo, Monaco, 'Lucida Console', 'Liberation Mono', 'DejaVu Sans Mono', 'Bitstream Vera Sans Mono',
      'Courier New', monospace;
  }
</style>
