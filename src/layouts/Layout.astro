---
import { astroI18n } from 'astro-i18n';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
}
const { title } = Astro.props;

astroI18n.init(Astro);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex min-h-screen flex-col justify-between overflow-x-hidden">
    <div class="root absolute left-0 top-0 -z-10 h-full w-full"></div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  @import url('https://fonts.googleapis.com/css?family=Space+Grotesk:thin,extrelight,light,regular,regularitalic,medium,mediumitalic,semibold,semibolditalic,bold,bolditalic');
  @import url('https://fonts.googleapis.com/css?family=Chivo:thin,extrelight,light,regular,regularitalic,medium,mediumitalic,semibold,semibolditalic,bold,bolditalic');

  body {
    background: rgb(0 251 245);
    background: linear-gradient(
      90deg,
      rgb(0 251 245) 0%,
      rgb(0 61 218) 25%,
      rgb(0 116 182) 50%,
      rgb(0 144 118) 75%,
      rgb(61 139 0) 100%
    );
  }

  .root {
    background: rgb(20 20 20);
    background: linear-gradient(
      180deg,
      rgb(20 20 20) 0%,
      rgb(20 20 20 / 0.95) 20%,
      rgb(20 20 20 / 0.7) 75%,
      rgba(20 20 20 / 0.7) 100%
    );
  }
</style>
